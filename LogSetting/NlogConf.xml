<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
	  internalLogLevel="Info"
	  internalLogFile="logs/nlog-internal.log">
	<!-- 核心配置说明：
       autoReload: 配置文件修改后自动重载，无需重启项目
       internalLogLevel: NLog自身日志级别（调试时可设为Debug）
       internalLogFile: NLog自身运行日志存储路径
  -->

	<!-- 1. 变量定义：统一管理路径/格式，便于维护 -->
	<variable name="LogDir"
			  value="${basedir}/logs"/>
	<!-- 日志根目录 -->
	<variable name="LogLayout"
			  value="${longdate}|${level:uppercase=true}|${logger}|${threadid}|${message} ${exception:format=ToString,StackTrace}"/>
	<!-- 日志格式 -->
	<variable name="ArchiveDir"
			  value="${LogDir}/archive"/>
	<!-- 日志归档目录 -->

	<!-- 2. 目标（Targets）：日志输出的目的地 -->
	<targets>
		<!-- 2.1 控制台输出（开发环境）：启用ANSI彩色输出（VS/终端生效） -->
		<target xsi:type="Console"
				name="ConsoleTarget"
				layout="${LogLayout}"
				enableAnsiOutput="true"
				ansiOutputRedirect="false"/>

		<!-- 2.2 按级别拆分文件（生产环境核心） -->
		<!-- 错误日志（Error/Fatal）：单个文件10MB自动归档，保留30个归档文件 -->
		<target xsi:type="File"
				name="ErrorFileTarget"
				fileName="${LogDir}/error.log"
				archiveFileName="${ArchiveDir}/error/error-{#}.log"
				archiveAboveSize="10485760"
				archiveNumbering="Rolling"
				maxArchiveFiles="30"
				concurrentWrites="true"
				keepFileOpen="false"
				layout="${LogLayout}"
				encoding="UTF-8"/>

		<!-- 信息日志（Info/Warn）：单个文件10MB自动归档，保留30个归档文件 -->
		<target xsi:type="File"
				name="InfoFileTarget"
				fileName="${LogDir}/info.log"
				archiveFileName="${ArchiveDir}/info/info-{#}.log"
				archiveAboveSize="10485760"
				archiveNumbering="Rolling"
				maxArchiveFiles="30"
				concurrentWrites="true"
				keepFileOpen="false"
				layout="${LogLayout}"
				encoding="UTF-8"/>

		<!-- 调试日志（Debug/Trace）：仅开发环境启用，保留10个归档文件 -->
		<target xsi:type="File"
				name="DebugFileTarget"
				fileName="${LogDir}/debug.log"
				archiveFileName="${ArchiveDir}/debug/debug-{#}.log"
				archiveAboveSize="10485760"
				archiveNumbering="Rolling"
				maxArchiveFiles="10"
				concurrentWrites="true"
				keepFileOpen="false"
				layout="${LogLayout}"
				encoding="UTF-8"/>

		<!-- 可选：结构化日志（JSON格式，便于ELK/日志分析工具解析） -->
		<target xsi:type="File"
				name="JsonFileTarget"
				fileName="${LogDir}/json/log.json"
				archiveAboveSize="10485760"
				maxArchiveFiles="30"
				concurrentWrites="true"
				encoding="UTF-8">
			<layout xsi:type="JsonLayout">
				<attribute name="time"
						   layout="${longdate}" />
				<attribute name="level"
						   layout="${level:uppercase=true}" />
				<attribute name="logger"
						   layout="${logger}" />
				<attribute name="message"
						   layout="${message}" />
				<attribute name="exception"
						   layout="${exception:format=ToString}" />
				<attribute name="threadId"
						   layout="${threadid}" />
			</layout>
		</target>
	</targets>

	<!-- 3. 规则（Rules）：日志级别与目标的映射 -->
	<rules>
		<!-- 开发环境：所有级别日志输出到控制台 -->
		<logger name="*"
				minlevel="Trace"
				maxlevel="Fatal"
				writeTo="ConsoleTarget" />

		<!-- 错误日志：Error/Fatal 输出到ErrorFileTarget -->
		<logger name="*"
				minlevel="Error"
				maxlevel="Fatal"
				writeTo="ErrorFileTarget" />

		<!-- 信息日志：Info/Warn 输出到InfoFileTarget -->
		<logger name="*"
				minlevel="Info"
				maxlevel="Warn"
				writeTo="InfoFileTarget" />

		<!-- 调试日志：仅开发环境启用（生产环境请注释/删除） -->
		<logger name="*"
				minlevel="Debug"
				maxlevel="Trace"
				writeTo="DebugFileTarget" />

		<!-- 可选：结构化日志输出（按需启用） -->
		<!-- <logger name="*" minlevel="Info" maxlevel="Fatal" writeTo="JsonFileTarget" /> -->

		<!-- 排除第三方组件冗余日志：屏蔽Microsoft/System/Swashbuckle的Info及以下日志 -->
		<logger name="Microsoft.*"
				maxlevel="Warn"
				final="true" />
		<logger name="System.*"
				maxlevel="Warn"
				final="true" />
		<logger name="Swashbuckle.*"
				maxlevel="Warn"
				final="true" />
	</rules>
</nlog>